{
  "name": "vscode-inara",
  "displayName": "Inara",
  "description": "Tools to work with JOSS & JOSE publishing artifacts in VSCode",
  "icon": "icons/icon.png",
  "version": "0.0.3",
  "publisher": "dfm",
  "license": "MIT",
  "homepage": "https://github.com/dfm/vscode-inara",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfm/vscode-inara.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "inara",
    "joss",
    "jose",
    "pandoc",
    "software",
    "publishing"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inara.buildPDF",
        "title": "Build PDF",
        "category": "Inara"
      },
      {
        "command": "inara.buildJATS",
        "title": "Build JATS",
        "category": "Inara"
      },
      {
        "command": "inara.buildCrossref",
        "title": "Build Crossref",
        "category": "Inara"
      },
      {
        "command": "inara.buildCFF",
        "title": "Build CFF",
        "category": "Inara"
      },
      {
        "command": "inara.buildPreprint",
        "title": "Build Preprint",
        "category": "Inara"
      },
      {
        "command": "inara.buildHTML",
        "title": "Build HTML",
        "category": "Inara"
      },
      {
        "command": "inara.displayLogs",
        "title": "Display build logs",
        "category": "Inara"
      },
      {
        "command": "inara.fixBibliography",
        "title": "Fix astronomy journal references",
        "category": "Inara"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Inara options",
      "properties": {
        "inara.pandoc": {
          "type": "string",
          "default": "pandoc",
          "description": "Path to pandoc executable"
        },
        "inara.journal": {
          "type": "string",
          "default": "joss",
          "description": "Journal identifier; must be 'joss' or 'jose'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "check": "vsce package --yarn",
    "prerelease": "vsce publish --yarn --pre-release",
    "release": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "yaml": "^2.3.2"
  }
}
